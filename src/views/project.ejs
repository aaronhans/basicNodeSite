<% include includes/header %>
<% project = data.project.response; %>

<section class="projectInfo">
	<div class="interior">
		<img src="<%= project.clips[0].assets.ios_600.url %>" class="projectClip">
		
		<span class="details">
			<h1><%= project.title %></h1>
			<span class="date"><%= moment(project.stamp).format('MMM Do YYYY') %></span>
			<ul class="achievements">
				<% var achievements = data.achievements.response; %>
				<% achievements.forEach(function(achievement) { 
					if(achievement.project.id == project.id) {
					%>
					<li>
						<img src="<%= achievement.skill.images.medium %>" class="hexagon">
						<span class="achievementTitle"><%= achievement.skill.grammar.singular %></span>
					</li>
				<% }
				}) %>
			</ul>

			<span class="author">
				<img src="<%= project.maker.avatar.icon.url %>" class="avatar author">
				<a class="name" href="/<%= project.maker.url %>"><%= project.maker.nickname %></a>
			</span>
		</span>
	</div>
</section>

<section class="social">
	<div class="interior">
		<% var comments = data.comments.response; %>
		<% include includes/comments %>
		<% var favorites = data.favorites.response; %>
		<% include includes/favorites %>
	</div>
</section>

<% include includes/footer %>